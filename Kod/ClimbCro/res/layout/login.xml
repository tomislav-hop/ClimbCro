<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/username"
        android:layout_centerHorizontal="true"
        android:text="@string/kor_ime"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#2F9146" />

    <EditText
        android:id="@+id/userpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/lozinka_hint"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/lozinka"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#2F9146" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userpass"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="@string/kor_ime_hint" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/gumb_registriraj_se"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_below="@+id/logIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/registracija"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/logIn"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/gumb_registriraj_se"
        android:layout_below="@+id/userpass"
        android:layout_marginTop="32dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/gumb_prijava"
        android:textColor="#FFFFFF" />

</RelativeLayout>
