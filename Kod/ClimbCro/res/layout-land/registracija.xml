<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <!-- Here you put the rest of your current view-->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="411dp" >

    <EditText
        android:id="@+id/lozinka"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Unesite lozinku" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Korisničko ime"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2F9146" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lozinka"
        android:layout_below="@+id/lozinka"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Ponovite lozinku"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/korisnicko_ime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Lozinka"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2F9146" />

    <EditText
        android:id="@+id/email"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:hint="Unesite e-mail"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="E-mail"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#2F9146" />

    <Button
        android:id="@+id/btnDodajKorisnika"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Registriraj se"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/korisnicko_ime"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Unesite korisničko ime"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

</RelativeLayout>
</ScrollView>